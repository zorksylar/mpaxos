#! /usr/bin/env python
# encoding:utf-8


def options(opt):
  opt.load('compiler_c')

def configure(conf):
  conf.load('compiler_c')
  conf.check_cfg(atleast_pkgconfig_version='0.0.0')
  conf.check_cfg(package='mpaxos', uselib_store='MPAXOS', args=['--cflags', '--libs'])
  conf.check_cfg(package='kvdb', uselib_store='KVDB', args=['--cflags', '--libs'])
  

def build(bld):
  bld.program(source='hello_kvdb.c', target='hello_kvdb.out', use='KVDB')

